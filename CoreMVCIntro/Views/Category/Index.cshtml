@model CategoryVM
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Model.Categories.Count == 0)
{
    <div class="jumbotron">
         Henüz hicbir kategori eklenmemiş...Ürün eklemek icin <a asp-action="AddCategory" asp-controller="Category">tıklayınız</a>
    </div>
}

else 
{

    <table class="table table-hover">
        <tr>
            <th>CategoryName</th>
            <th>Description</th>
            <th  colspan="2">Islemler</th>
        </tr>
        @foreach (Category item in Model.Categories)
        {
            <tr>
                <td>
                    @item.CategoryName
                </td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-warning" asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.ID">Kategori Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.ID">Kategori Sil</a>
                </td>
            </tr>
        }
    </table>



}